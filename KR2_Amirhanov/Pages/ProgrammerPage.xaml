<Page x:Class="KR2_Amirhanov.Pages.ProgrammerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR2_Amirhanov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProgrammerPage">

    <Grid>
        <DataGrid x:Name="ProgrammersDataGrid" AutoGenerateColumns="False" Margin="10" ItemsSource="{Binding}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding EmployeeID}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Имя задачи" Binding="{Binding TaskName}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
