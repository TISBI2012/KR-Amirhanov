<Page x:Class="KR2_Amirhanov.Pages.PlatformsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR2_Amirhanov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlatformsPage">
    <Grid Margin="10">
        <DataGrid x:Name="PlatformsDataGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Platform ID" Binding="{Binding PlatformID}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Department ID" Binding="{Binding DepartmentID}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
