<Page x:Class="KR2_Amirhanov.Pages.AddEmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR2_Amirhanov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEmployeePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Логин:"/>
            <TextBox Margin="5" Text="{Binding Login}"/>
            <TextBlock Text="Пароль:"/>
            <TextBox Margin="5" Text="{Binding Password}"/>
            <TextBlock Text="Имя:"></TextBlock>
            <TextBox Text="{Binding FullName}" Margin="5"></TextBox>
            <TextBlock Text="Телефон:"></TextBlock>
            <TextBox Text="{Binding Phone}" Margin="5"></TextBox>
            <TextBlock Text="Пасспорт:"></TextBlock>
            <TextBox Text="{Binding Passport}" Margin="5"></TextBox>
            <Button Content="Добавить" Margin="5" Click="Add_Click"/>
        </StackPanel>
    </Grid>
</Page>
