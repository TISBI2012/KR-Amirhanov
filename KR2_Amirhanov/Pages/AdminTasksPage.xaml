<Page x:Class="KR2_Amirhanov.Pages.AdminTasksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR2_Amirhanov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminTasksPage">

    <Grid>
        <DataGrid x:Name="TasksDataGrid" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding TaskID}" />
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" />
                <DataGridTextColumn Header="Работник" Binding="{Binding EmployeeName}" />
                <DataGridTextColumn Header="Заказ" Binding="{Binding OrderDescription}"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding CategoryName}" />
                <DataGridTextColumn Header="Приоритеты" Binding="{Binding PriorityName}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
