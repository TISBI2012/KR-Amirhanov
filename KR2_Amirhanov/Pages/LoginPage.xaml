<Page x:Class="KR2_Amirhanov.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR2_Amirhanov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логин:" Margin="5"></TextBlock>
            <TextBox Name="LoginBox" Margin="5"></TextBox>
            <TextBlock Text="Пароль:" Margin="5"></TextBlock>
            <PasswordBox Name="Password" Margin="5"></PasswordBox>
            <Button Click="Login_Click" Content="Войти" Margin="5"></Button>
            <Button Click="Register_Click" Content="Зарегистрироваться" Margin="5"></Button>
        </StackPanel>
    </Grid>
</Page>
