<Page x:Class="KR2_Amirhanov.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR2_Amirhanov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Top" Orientation="Vertical">
            <Button Content="Добавить сотрудника" Margin="5" Click="AddEmployee_Click"/>
            <Button Content="Добавить задачу" Margin="5" Click="AddTask_Click"/>
            <Button Content="Добавить платформу" Margin="5" Click="AddPlatform_Click"/>
            <Button Content="Просмотр сотрудников" Margin="5" Click="ViewEmployees_Click"/>
            <Button Content="Просмотр задач" Margin="5" Click="ViewTasks_Click"/>
            <Button Content="Просмотр платформ" Margin="5" Click="ViewPlatforms_Click"/>
            <Button Content="Просмотр заказов" Margin="5" Click="ViewOrders_Click"/>
        </StackPanel>

        <Frame x:Name="AdminFrame" Grid.Column="1" Margin="5"/>
    </Grid>
</Page>
